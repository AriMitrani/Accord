<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GenreActivity">

    <Button
        android:id="@+id/bSpotify"
        android:layout_width="208dp"
        android:layout_height="95dp"
        android:background="#4CAF50"
        android:gravity="center"
        android:text="Link Spotify"
        app:iconTint="#4CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLoca"
        app:layout_constraintVertical_bias="0.32999998" />

    <TextView
        android:id="@+id/tvLoca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="Let's get to know your music taste!"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvGenre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Or click here to input genres manually"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/bSpotify"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/bSpotify"
        app:layout_constraintTop_toBottomOf="@+id/bSpotify" />
</androidx.constraintlayout.widget.ConstraintLayout>